root = true

[*]
indent_style = space
charset = utf-8
trim_trailing_whitespace = true
end_of_line = lf

[Makefile]
indent_style = tab

[*.{yml,yaml}]
indent_size = 2

# YAML files in the manifests directory are Helm charts, not plaintext YAML
[manifests/charts/**/*.yaml]
indent_size = unset
